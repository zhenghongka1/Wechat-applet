page {
  padding-bottom: 90rpx;
}
.recevice_address .user_info_row {
  padding-top: 20rpx;
  padding-left: 20rpx;
  display: flex;
}
.recevice_address .user_info_row .user_info {
  flex: 5;
}
.recevice_address .user_info_row .user_phone {
  flex: 2;
}
.cart_content .cart_title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-bottom: 2rpx solid var(--themeColor);
}
.cart_content .cart_main .goods_void {
  margin-top: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: gray;
}
.cart_content .cart_main .cart_item {
  display: flex;
  padding: 10rpx;
  border-bottom: 2rpx solid #ccc;
}
.cart_content .cart_main .cart_item .cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_content .cart_main .cart_item .cart_img_wrap image {
  height: 80%;
  width: 80%;
  color: #666;
}
.cart_content .cart_main .cart_item .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_name {
  color: #666;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_num_tool {
  display: flex;
}
.cart_content .cart_main .cart_item .cart_info_wrap .goods_price_wrap .goods_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  display: flex;
  border-top: 1rpx solid #e0dcdc;
}
.footer_tool .total_price_wrap {
  flex: 4;
  text-align: right;
  padding-right: 10rpx;
}
.footer_tool .total_price_wrap .total_price {
  font-size: 32rpx;
}
.footer_tool .total_price_wrap .total_price .total_price_num {
  color: var(--themeColor);
}
.footer_tool .pay_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f6574f;
  color: white;
}
